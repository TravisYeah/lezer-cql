@top BooleanExpression { booleanTerm }

booleanTerm {
	BooleanLiteral |
	BooleanAnd |
	BooleanOr |
	NegatedBooleanTerm
}

NegatedBooleanTerm {
	"not" booleanTerm
}

BooleanAnd {
	booleanTerm !and "and" booleanTerm
}

BooleanOr {
	booleanTerm !or "or" booleanTerm
}

BooleanLiteral { True | False }

True { "TRUE" | "true" }
False { "FALSE" | "false" }

@skip { space }

@precedence {
  and @left
  or @left
}

@tokens {
  space { @whitespace+ }
}

